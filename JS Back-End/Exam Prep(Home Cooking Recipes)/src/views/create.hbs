<section class="form-container">
    <h2>Create Recipe</h2>
    <form method="post">
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title" value={{newRecipe.title}}>

        <label for="description">Description:</label>
        <textarea id="description" name="description">{{newRecipe.description}}</textarea>

        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{newRecipe.ingredients}}</textarea>

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions">{{newRecipe.instructions}}</textarea>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value={{newRecipe.image}}>

        <button type="submit">Create Recipe</button>
    </form>
</section>